<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_timeline_head"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_timeline_head_h"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/timeline_head_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/timeline_head_iv">

        <TextView
            android:id="@+id/timeline_head_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textSize="@dimen/item_timeline_head_name_size" />

        <TextView
            android:id="@+id/timeline_head_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timeline_head_name_tv"
            android:textSize="@dimen/item_timeline_head_name_size" />

        <TextView
            android:id="@+id/timeline_head_source_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timeline_head_name_tv"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/timeline_head_time_tv"
            android:textSize="@dimen/item_timeline_head_name_size" />

    </RelativeLayout>

</RelativeLayout>